{
  "name": "nsz-desktop",
  "version": "1.0.0",
  "description": "Modern Electron desktop app for NSZ compression/decompression",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "vite build",
    "start": "electron .",
    "pack": "vite build && electron-builder --dir",
    "dist": "vite build && electron-builder"
  },
  "keywords": [
    "nsz",
    "switch",
    "compression"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "build": {
    "appId": "com.nsz.desktop",
    "productName": "NSZ Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "dir",
          "arch": ["x64"]
        }
      ],
      "signAndEditExecutable": false
    },
    "portable": {
      "artifactName": "NSZ-Desktop-Portable.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "NSZ-Desktop-Setup.exe"
    },
    "asar": true,
    "extraResources": [
      {
        "from": "tools",
        "to": "tools",
        "filter": ["**/*"]
      }
    ]
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.0.12",
    "vite": "^7.3.1",
    "wait-on": "^9.0.4"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
